<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="android:background">@color/primary_color_dark</item>
        <item name="android:windowBackground">@color/primary_color_dark</item>
        <item name="android:colorBackground">@color/primary_color_dark</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:padding">@dimen/activity_config_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:switchPadding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="RateTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/activity_config_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="SmallTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/primary_color</item>
    </style>
</resources>